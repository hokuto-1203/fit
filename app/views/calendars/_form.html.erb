<div class="calendar-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for @calendar do |f| %>
         <div class="form-group">
            <label class="control-label" for="">日付</label>
            <%= f.date_select :c_date, {}, class: 'form-control' %>
         </div>
         <div class="form-group">
           <p><%= f.label :tops %></p>
           <%= f.collection_select :top_item, @top_items, :image, :id %>

           <%= f.label :bottoms%>
           <%= f.file_field :bottom_item%>

           <%= f.label :shoes%>
           <%= f.file_field :shoes_item%>
         </div>
        
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, class: 'form-control' %>
        </div>
        
        <% if logged_in? %>
        <%= f.submit '投稿', class:'btn btn-black btn-block' %>
        
        <% end %>
        
      <% end %>
        
      </div>
    </div>
  </div>
</div>